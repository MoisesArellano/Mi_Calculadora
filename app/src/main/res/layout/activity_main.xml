<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="movil.itq.root.micalculadora.MainActivity"
    android:background="#f0ba26"
    android:padding="0dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_margin="0dp"
        android:gravity="right"
        android:textSize="50sp"
        android:maxLines="2"
        android:maxWidth="17dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btn9"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btn5"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn7"
        android:layout_toStartOf="@+id/btn9"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn3"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:onClick="onClickNumber"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btn6"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn5"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btn4"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn7"
        android:layout_toStartOf="@+id/btn5"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btn2"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn5"
        android:layout_toStartOf="@+id/btn3"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btn1"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn5"
        android:layout_toStartOf="@+id/btn2"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/btn0"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="%"
        android:id="@+id/btnmod"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn3"
        android:layout_toStartOf="@+id/btnigual"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:text="C"
        android:id="@+id/btnreset"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_alignTop="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickClear" />

    <Button
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:text="/"
        android:id="@+id/btndiv"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn6"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/btnmas"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btndiv"
        android:layout_toRightOf="@+id/btn6"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:text="*"
        android:id="@+id/btnmul"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btnreset"
        android:layout_toEndOf="@+id/btndiv"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/btnmenos"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btnmul"
        android:layout_toRightOf="@+id/btndiv"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/btnigual"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c71b1b"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:onClick="onClickEqual" />

</RelativeLayout>
